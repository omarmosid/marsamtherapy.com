---
interface Props {
	title: string;
	description: string;
	href?: string;
}

const { title, description, href } = Astro.props;
const Tag = href ? 'a' : 'div';
---

<Tag 
	href={href}
	class="block group bg-gradient-to-br from-night to-night-light border border-night-lighter rounded-lg p-6 hover:shadow-lg hover:shadow-primary/20 hover:border-primary/30 hover:-translate-y-1 transition-all duration-300"
>
	<slot name="icon" />
	<h3 class="font-serif text-xl text-ivory mb-2 group-hover:text-primary transition-colors">{title}</h3>
	<p class="text-charcoal-light text-sm leading-relaxed mb-3">{description}</p>
	{href && (
		<span class="inline-flex items-center gap-2 text-primary text-sm font-medium group-hover:gap-3 transition-all">
			Learn More
			<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
			</svg>
		</span>
	)}
</Tag>
