---
interface Props {
	id: string;
	name: string;
	label: string;
	checked?: boolean;
	required?: boolean;
	class?: string;
}

const {
	id,
	name,
	label,
	checked = false,
	required = false,
	class: className = ''
} = Astro.props;
---

<div class={`flex items-start ${className}`}>
	<input
		type="checkbox"
		id={id}
		name={name}
		checked={checked}
		required={required}
		class="mt-1 h-4 w-4 rounded border-night-lighter bg-night-light text-primary focus:ring-2 focus:ring-primary/20 focus:ring-offset-0 transition-all"
	/>
	<label for={id} class="ml-3 text-sm text-charcoal">
		{label}
		{required && <span class="text-primary ml-1">*</span>}
	</label>
</div>
