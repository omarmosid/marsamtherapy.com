---
const currentYear = new Date().getFullYear();

const socialLinks = [
	{
		name: 'Email',
		href: 'mailto:contact@marsamtherapy.com',
		icon: 'M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
	},
	{
		name: 'LinkedIn',
		href: 'https://linkedin.com',
		icon: 'M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z M4 6a2 2 0 100-4 2 2 0 000 4z',
	},
	{
		name: 'Upscrolled',
		href: 'https://upscrolled.com',
		icon: 'M13 7h8m0 0v8m0-8l-8 8-4-4-6 6',
	},
];
---

<footer class="bg-night-light text-charcoal border-t border-night-lighter">
	<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
		<div class="grid md:grid-cols-3 gap-8 md:gap-12">
			<!-- Brand -->
			<div>
				<a href="/" class="flex items-center gap-3 mb-4">
					<img 
						src="/logo.png" 
						alt="Marsam Therapy Logo" 
						class="h-10 w-auto"
					/>
					<span class="font-serif text-xl text-ivory">Marsam Therapy</span>
				</a>
				<p class="text-charcoal-dark text-sm leading-relaxed">
					Know it. Feel it. Believe it.<br />
					Faith-informed psychological counselling for your journey to inner peace.
				</p>
			</div>

			<!-- Quick Links -->
			<div>
				<h4 class="font-serif text-lg text-primary mb-4">Quick Links</h4>
				<ul class="space-y-2">
					<li><a href="/#about" class="text-charcoal-light hover:text-primary transition-colors text-sm">About</a></li>
					<li><a href="/#services" class="text-charcoal-light hover:text-primary transition-colors text-sm">Services</a></li>
					<li><a href="/#approach" class="text-charcoal-light hover:text-primary transition-colors text-sm">Approach</a></li>
					<li><a href="/#contact" class="text-charcoal-light hover:text-primary transition-colors text-sm">Contact</a></li>
					<li><a href="/blog" class="text-charcoal-light hover:text-primary transition-colors text-sm">Blog</a></li>
				</ul>
			</div>

			<!-- Connect -->
			<div>
				<h4 class="font-serif text-lg text-primary mb-4">Connect</h4>
				<div class="flex gap-6">
					{socialLinks.map((link) => (
						<a
							href={link.href}
							target="_blank"
							rel="noopener noreferrer"
							class="text-charcoal hover:text-primary transition-colors"
							aria-label={link.name}
						>
							<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={link.icon} />
							</svg>
						</a>
					))}
				</div>
				<p class="text-charcoal-dark text-sm mt-4">
					Online consultations available
				</p>
			</div>
		</div>

		<!-- Copyright -->
		<div class="border-t border-night-lighter mt-10 pt-8 text-center">
			<p class="text-charcoal-dark text-sm">
				Â© {currentYear} Mariya Samreen. All rights reserved.
			</p>
		</div>
	</div>
</footer>
