---
interface Props {
	title: string;
	excerpt: string;
	date: string;
	category: string;
	slug: string;
	image?: string;
}

const { title, excerpt, date, category, slug, image } = Astro.props;
---

<article class="group h-full">
	<a 
		href={`/blog/${slug}`}
		class="flex flex-col h-full bg-gradient-to-br from-night-light to-night border border-night-lighter rounded-xl overflow-hidden hover:shadow-xl hover:shadow-primary/20 hover:border-primary/40 hover:-translate-y-1 transition-all duration-300"
	>
		<!-- Image -->
		<div class="relative aspect-[16/9] bg-night overflow-hidden flex-shrink-0">
			{image ? (
				<img 
					src={image}
					alt={title}
					class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700 ease-out"
				/>
			) : (
				<div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-night to-night-lighter group-hover:scale-110 transition-transform duration-700">
					<span class="text-5xl text-primary/40">✦</span>
				</div>
			)}
			<!-- Gradient overlay -->
			<div class="absolute inset-0 bg-gradient-to-t from-night/60 via-transparent to-transparent opacity-60"></div>
		</div>
		
		<div class="p-6 flex flex-col flex-grow">
			<!-- Category & Date -->
			<div class="flex items-center justify-between gap-3 mb-4">
				<span class="px-2.5 py-1 bg-primary/10 text-primary text-xs font-semibold uppercase tracking-wider rounded border border-primary/30">
					{category}
				</span>
				<time class="text-charcoal-dark text-xs flex items-center gap-1.5">
					<svg class="w-3.5 h-3.5 text-primary/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
					</svg>
					{date}
				</time>
			</div>
			
			<!-- Title -->
			<h3 class="font-serif text-xl sm:text-2xl text-ivory mb-3 leading-tight group-hover:text-primary transition-colors line-clamp-2">
				{title}
			</h3>
			
			<!-- Excerpt -->
			<p class="text-charcoal text-sm leading-relaxed mb-4 flex-grow line-clamp-3">
				{excerpt}
			</p>
			
			<!-- Read More -->
			<div class="flex items-center justify-between mt-auto pt-4 border-t border-night-lighter">
				<span class="inline-flex items-center gap-2 text-primary font-semibold text-sm group-hover:gap-3 transition-all">
					Read Article
					<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
					</svg>
				</span>
				<span class="text-charcoal-dark text-xs opacity-0 group-hover:opacity-100 transition-opacity">
					✦
				</span>
			</div>
		</div>
	</a>
</article>
